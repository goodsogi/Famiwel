<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="276dp" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:scaleType="centerCrop" />

    <!-- <ImageView -->
    <!-- android:id="@+id/icon" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="191dp" -->
    <!-- android:layout_marginBottom="7dp" -->
    <!-- android:layout_marginTop="11dp" -->
    <!-- android:scaleType="centerCrop" /> -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_below="@id/icon"
        android:background="#f8f8f8" >

        <!-- <View -->
        <!-- android:id="@+id/line" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="1px" -->
        <!-- android:layout_marginTop="9dp" -->
        <!-- android:background="#d0d0d0" /> -->

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textColor="#d0d0d0"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title"
            android:layout_below="@id/title"
            android:singleLine="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/line"
            android:layout_below="@id/line"
            android:layout_marginRight="12dp"
            android:layout_marginTop="6dp"
            android:drawableRight="@drawable/ico_pre"
            android:text="추천상품"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/subtitle"
            android:layout_below="@+id/subtitle"
            android:textColor="#dd1501"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/percentage"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/percentage"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sale_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/price"
            android:layout_below="@+id/price"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/free_delivery"
            android:layout_width="59dp"
            android:layout_height="16dp"
            android:layout_alignTop="@id/price"
            android:layout_marginLeft="125dp"
            android:layout_toRightOf="@id/price"
            android:scaleType="fitXY" />
    </RelativeLayout>

</RelativeLayout>